{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  semanticCommits: "auto",
  schedule: [
    "after 8am on sunday"
  ],
  enabledManagers: [
    "dockerfile",
    "gomod",
    "github-actions",
    "npm",
    "regex",
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "gomod", "github-actions", "npm", "regex"],
      "groupName": "{{manager}}"
    }
  ],
  customManagers: [
    {
      customType: "regex",
      fileMatch: [
        "^Makefile"
      ],
      matchStrings: [
        "DOCKER_BUILD_RUNTIME_IMAGE_ALPINE\\s+?\\?= alpine:(?<currentValue>.*)\\s"
      ],
      depNameTemplate: "alpine",
      datasourceTemplate: "docker",
    },
  ],
}
